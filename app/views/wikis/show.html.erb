<h1><%= @wiki.title %></h1><br />
<small>Created by <%= @wiki.user.username %> <%= time_ago_in_words(@wiki.created_at) %> ago</small>

<div class="row down-20">

  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <%= @wiki.body %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-primary' %>
    <% if current_user.admin? %>
      <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?' } %>
    <% end %>
  </div>

</div>
